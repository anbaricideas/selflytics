# Application
ENVIRONMENT=dev
DEBUG=true
PORT=8000

# Database
FIRESTORE_DATABASE=(default)

# Authentication
JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CSRF Protection (min 32 chars, 64+ recommended for production)
CSRF_SECRET=change-this-secret-to-a-random-64-character-string-for-production-security

# Telemetry
TELEMETRY_BACKEND=cloudlogging
GCP_PROJECT_ID=selflytics-infra
